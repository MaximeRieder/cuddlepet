<div class="home-banner">
  <h1>Cuddle Pet</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>


<div class="container">
  <div class="cards">
    <% @pets.each do |pet| %>
      <div class="cardindex"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @pet.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to pet.name.capitalize, pet_path(pet) %></h2>
              <p><%= pet.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= pet.price %> CHF</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

