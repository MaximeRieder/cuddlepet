<div class="home-banner">
  <h1>Cuddle Pet</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>


<div class="container">
  <div class="cards">
    <% @pets.each do |pet| %>
      <div class="card-category">
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to pet.name.capitalize, pet_path(pet) %></h2>
              <p><%= pet.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= pet.price %> CHF</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

