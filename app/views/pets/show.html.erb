
  <% if @pet.photo.present? %>
    <%= cl_image_tag @pet.photo, height: 450, width: 600, crop: :fill %>
  <% else %>
    <div class="show-banner" id="dog-love" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1555329947-806474115762?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80)">
    </div>
  <% end %>


<div class="grid-container">
  <div class="container-details">
    <h2><%= @pet.name %></h2>
    <p><%= @pet.description %></p>
    <p><%= @pet.user.email %></p>
  </div>
  <div class="box">
    <p><%= @pet.price %> CHF</p>
    <div class="btn btn-primary">book</div>
  </div>

</div>
