
<div class="container">
  <%= cl_image_tag @pet.get_photo, {class: "img_cover"} %>



  <div class="grid-container">
    <div class="container-details">

      <h2><%= @pet.name.capitalize %></h2>
      <p>description: <%= @pet.description %></p>
      <p>owner: <%= @pet.user.email %></p>
      <p><%= @pet.address %></p>

    </div>

    <div class="box">
      <h3><i class="fas fa-paw"> <%= @pet.price %> CHF</i></h3>
        <%= render 'shared/booking_form_new' %>
    </div>
  </div>


  <div id="map"
    style="width: 100%;
    height: 600px;
    border-radius: 5px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>




