<div class="container">
  <div class="container-form">
    <h1>Add Pet:</h1>
    <%= simple_form_for (@pet) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
